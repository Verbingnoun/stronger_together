<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Post</th>
      <th>String</th>
      <th>Title</th>
      <th>Description</th>
      <th>Image path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.profile_id %></td>
        <td><%= image.post_id %></td>
        <td><%= image.string %></td>
        <td><%= image.title %></td>
        <td><%= image.description %></td>
        <td><%= image.image_path %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

